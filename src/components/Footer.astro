---
// Footer con logo optimizado desde assets
import { Icon } from 'astro-icon/components';
import logoOsc from '../assets/branding/logo_osc.svg';

const contactInfo = {
  address: "Barranquilla, Atlántico, Colombia",
  whatsappLink: "https://wa.me/573243025107",
  phoneDisplay: "+57 324 3025107",
  email: "informacion@sgsolucionesing.com",
};

const socialLinks = {
  linkedin: "https://www.linkedin.com/company/sgsolucionesing/",
  instagram: "https://www.instagram.com/sgsolucionesing/",
};
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      
      <div>
        <a href="/" class="block mb-4">
          <img 
            src={logoOsc.src} 
            alt="Logo de S&G Soluciones de Ingeniería" 
            class="h-12 w-auto"
            width="150"
            height="48"
          />
        </a>
        <p class="text-gray-400 text-sm leading-relaxed">
          Soluciones integrales en automatización, proyectos eléctricos, metalmecánicos y transformación digital.
        </p>
      </div>
      
      <div>
        <h3 class="font-semibold text-gray-200 mb-4">Navegación</h3>
        <ul class="space-y-3">
          <li><a href="/" class="text-gray-400 hover:text-white transition-colors duration-300">Inicio</a></li>
          <li><a href="/#servicios" class="text-gray-400 hover:text-white transition-colors duration-300">Servicios</a></li>
          <li><a href="/proyectos" class="text-gray-400 hover:text-white transition-colors duration-300">Proyectos</a></li>
          <li><a href="/contacto" class="text-gray-400 hover:text-white transition-colors duration-300">Contacto</a></li>
        </ul>
      </div>
      
      <div>
        <h3 class="font-semibold text-gray-200 mb-4">Contacto</h3>
        <ul class="space-y-3 text-gray-400">
          <li class="flex items-start">
            <Icon name="mdi:map-marker" class="h-5 w-5 mr-3 mt-1 flex-shrink-0 text-blue-400" />
            <span>{contactInfo.address}</span>
          </li>
          <li class="flex items-start">
            <Icon name="mdi:whatsapp" class="h-5 w-5 mr-3 mt-1 flex-shrink-0 text-blue-400" />
            <a href={contactInfo.whatsappLink} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors duration-300">{contactInfo.phoneDisplay}</a>
          </li>
          <li class="flex items-start">
            <Icon name="mdi:email-outline" class="h-5 w-5 mr-3 mt-1 flex-shrink-0 text-blue-400" />
            <a href={`mailto:${contactInfo.email}`} class="hover:text-white transition-colors duration-300 break-all">{contactInfo.email}</a>
          </li>
        </ul>
      </div>

      <div>
        <h3 class="font-semibold text-gray-200 mb-4">Síguenos</h3>
        <div class="flex space-x-4">
          <a href={socialLinks.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="text-gray-400 hover:text-white hover:scale-110 transform transition-all duration-300">
            <Icon name="mdi:linkedin" class="h-6 w-6" />
          </a>
          <a href={socialLinks.instagram} target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="text-gray-400 hover:text-white hover:scale-110 transform transition-all duration-300">
            <Icon name="mdi:instagram" class="h-6 w-6" />
          </a>
        </div>
      </div>
    </div>
    
    <div class="mt-12 border-t border-gray-700 pt-8 text-center text-gray-500">
      <p class="text-sm">&copy; {new Date().getFullYear()} S&G Soluciones de Ingeniería S.A.S. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>