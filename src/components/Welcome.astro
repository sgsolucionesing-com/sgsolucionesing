---
// Importar componentes necesarios
import HeroSection from './HeroSection.astro';
import StatsSection from './StatsSection.astro';
import ServicesSection from './ServicesSection.astro';
import PlatformsSection from './PlatformsSection.astro';
import AboutSection from './AboutSection.astro';
import SectorsSection from './SectorsSection.astro';
import ProjectsSection from './ProjectsSection.astro';
import TestimonialsSection from './TestimonialsSection.astro';
---

<!-- Componentes de la landing page -->
<main>
  <!-- Sección Hero -->
  <HeroSection />
  
  <!-- Sección de Estadísticas -->
  <StatsSection />
  
  <!-- Sección de Servicios/Unidades de Negocio -->
  <ServicesSection />
  
  <!-- Sección de Acceso Multiplataforma -->
  <PlatformsSection />
  
  <!-- Sección Quiénes Somos -->
  <AboutSection />
  
  <!-- Sección de Sectores de Aplicación -->
  <SectorsSection />
  
  <!-- Sección de Proyectos -->
  <ProjectsSection />
  
  <!-- Sección de Testimonios -->
  <TestimonialsSection />
  
  <!-- Call to Action -->
  <section class="py-16 bg-primary text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">¿Listo para transformar tu negocio?</h2>
      <p class="text-xl mb-8 max-w-3xl mx-auto">Contáctanos hoy mismo para discutir cómo podemos ayudarte a optimizar tus procesos industriales.</p>
      <a href="/contacto" class="bg-white text-primary hover:bg-white/90 px-8 py-3 rounded-md font-bold transition-colors inline-flex items-center">
        Solicitar Cotización
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>
</main>

<style>
/* Estilos globales para la landing page */
:root {
    --primary-color: #2DD4BF; /* Teal/Turquesa principal */
    --secondary-color: #1E3A8A; /* Azul secundario */
    --dark-blue: #0F172A; /* Azul oscuro */
    --accent-color: #FFD700; /* Dorado para acentos */
    --light-gray: #F8FAFC; /* Gris claro */
}

main {
    width: 100%;
    overflow-x: hidden;
}

/* Botones y elementos interactivos */
.btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    background-color: var(--primary-color);
    color: white;
    font-weight: 600;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    text-decoration: none;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

.btn-primary:hover {
    background-opacity: 0.9;
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

.btn-outline {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    background: transparent;
    border: 2px solid;
    font-weight: 600;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    text-decoration: none;
}

/* Animaciones globales */
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
}

/* Estilos adicionales del diseño original */
.stats-counter {
    font-size: 3rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.service-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    font-size: 2rem;
    color: white;
    box-shadow: 0 10px 15px -3px rgba(45, 212, 191, 0.3), 0 4px 6px -2px rgba(45, 212, 191, 0.2);
}

.section-divider {
    height: 4px;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    margin: 2rem auto;
}

.card-hover { transition: all 0.3s ease; }
.card-hover:hover {
    transform: translateY(-8px);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
}

/* Responsive */
@media (max-width: 768px) {
    .container {
        padding-left: 1rem;
        padding-right: 1rem;
    }
}
</style>

<script>
// Script global para inicializar todas las animaciones de scroll
document.addEventListener('DOMContentLoaded', () => {
    const observer = new IntersectionObserver((entries, observerInstance) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('is-visible');
                // No desconectamos el observer para elementos que necesitan animación continua
                if (!entry.target.classList.contains('animate-always')) {
                    observerInstance.unobserve(entry.target);
                }
            }
        });
    }, {
        threshold: 0.1,
        rootMargin: '0px 0px -100px 0px'
    });

    const elementsToAnimate = document.querySelectorAll('.fade-in-element, .slide-in-element, .scale-in-element');
    elementsToAnimate.forEach(el => {
        observer.observe(el);
    });
});
</script>
