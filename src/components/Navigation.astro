---
// src/components/Navigation.astro
import { Icon } from 'astro-icon/components';
import iconSvg from '../assets/branding/icon.svg';

const whatsappLink = "https://api.whatsapp.com/send?phone=573243025107&text=Hola%2C%20quiero%20m%C3%A1s%20informaci%C3%B3n%20sobre%20S%26G%20Soluciones%20de%20Ingenier%C3%ADa";
---

<nav class="bg-white dark:bg-gray-900 shadow-lg sticky top-0 z-50 transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <!-- Logo -->
      <a href="/">
        <img src={iconSvg.src} alt="S&G Soluciones de Ingeniería" class="h-14 w-auto object-contain">
      </a>

      <!-- Menú de escritorio -->
      <div class="hidden md:flex items-center space-x-6">
        <a href="/" class="text-gray-700 dark:text-gray-300 hover:text-primary font-medium transition-colors">Inicio</a>
        <a href="/#servicios" class="text-gray-700 dark:text-gray-300 hover:text-primary font-medium transition-colors">Servicios</a>
        <a href="/proyectos" class="text-gray-700 dark:text-gray-300 hover:text-primary font-medium transition-colors">Proyectos</a>
        <a href="/contacto" class="text-gray-700 dark:text-gray-300 hover:text-primary font-medium transition-colors">Contacto</a>
        
        <!-- Interruptor de tema -->
        <button type="button" class="text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg text-sm p-2.5 transition-colors" aria-label="Toggle theme">
          <svg class="sun-icon w-5 h-5 block dark:hidden" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 18a6 6 0 1 1 0-12 6 6 0 0 1 0 12zm0-2a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM11 1h2v3h-2V1zm0 19h2v3h-2v-3zM3.515 4.929l1.414-1.414L7.05 5.636 5.636 7.05 3.515 4.93zM16.95 18.364l1.414-1.414 2.121 2.121-1.414 1.414-2.121-2.121zm2.121-14.85l1.414 1.415-2.121 2.121-1.414-1.414 2.121-2.121zM5.636 16.95l1.414 1.414-2.121 2.121-1.414-1.414 2.121-2.121zM23 11v2h-3v-2h3zM4 11v2H1v-2h3z"/>
          </svg>
          <svg class="moon-icon w-5 h-5 hidden dark:block" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313-12.454z"/>
          </svg>
        </button>
      </div>

      <!-- Botones de la derecha en móvil -->
      <div class="md:hidden flex items-center space-x-2">
        <button type="button" class="text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg text-sm p-2.5 transition-colors" aria-label="Toggle theme">
          <svg class="sun-icon w-5 h-5 block dark:hidden" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 18a6 6 0 1 1 0-12 6 6 0 0 1 0 12zm0-2a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM11 1h2v3h-2V1zm0 19h2v3h-2v-3zM3.515 4.929l1.414-1.414L7.05 5.636 5.636 7.05 3.515 4.93zM16.95 18.364l1.414-1.414 2.121 2.121-1.414 1.414-2.121-2.121zm2.121-14.85l1.414 1.415-2.121 2.121-1.414-1.414 2.121-2.121zM5.636 16.95l1.414 1.414-2.121 2.121-1.414-1.414 2.121-2.121zM23 11v2h-3v-2h3zM4 11v2H1v-2h3z"/>
          </svg>
          <svg class="moon-icon w-5 h-5 hidden dark:block" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313-12.454z"/>
          </svg>
        </button>
        <button id="mobile-menu-btn" class="text-gray-700 dark:text-gray-300 hover:text-primary transition-colors" aria-label="Abrir menú">
          <Icon name="mdi:menu" class="h-8 w-8" />
        </button>
      </div>
    </div>

    <!-- Menú desplegable móvil -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-2">
        <a href="/" class="block px-4 py-2 text-gray-700 dark:text-gray-300 hover:text-primary font-medium transition-colors">Inicio</a>
        <a href="/#servicios" class="block px-4 py-2 text-gray-700 dark:text-gray-300 hover:text-primary font-medium transition-colors">Servicios</a>
        <a href="/proyectos" class="block px-4 py-2 text-gray-700 dark:text-gray-300 hover:text-primary font-medium transition-colors">Proyectos</a>
        <a href="/contacto" class="block px-4 py-2 text-gray-700 dark:text-gray-300 hover:text-primary font-medium transition-colors">Contacto</a>
        <hr class="border-gray-200 dark:border-gray-700 my-2">
        <a href={whatsappLink}
           target="_blank"
           rel="noopener noreferrer"
           class="block px-4 py-2 border-2 border-primary text-primary rounded-lg font-semibold text-center mt-1 hover:bg-primary hover:text-white transition-colors">
          Contactar Ahora
        </a>
      </div>
    </div>
  </div>
</nav>

<script is:inline>
  // --- Lógica para el menú móvil ---
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>

