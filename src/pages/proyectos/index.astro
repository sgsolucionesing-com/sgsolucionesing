---
// src/pages/proyectos/index.astro - Página índice de proyectos con Layout integrado
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Icon } from 'astro-icon/components';

const items = (await getCollection('proyectos')).sort((a,b)=> (a.data.order ?? 999) - (b.data.order ?? 999));
const destacados = items.filter((i)=> i.data.destacado).slice(0,6);
const resto = items.filter((i)=> !i.data.destacado);
const toUrl = (e) => `/proyectos/${e.slug ?? e.id.split('/').pop()?.replace(/\.mdx?$/, '')}`;

// Meta información para SEO
const pageTitle = "Casos de Éxito | S&G Soluciones de Ingeniería";
const pageDescription = "Explora nuestros proyectos reales de automatización industrial, IoT e Industria 4.0: monitoreo predictivo, bancos de condensadores, tableros inteligentes y más.";
const pageKeywords = "casos de éxito, proyectos, automatización industrial, IoT, industria 4.0, monitoreo predictivo, S&G Soluciones";
---

<Layout 
  title={pageTitle} 
  description={pageDescription}
  keywords={pageKeywords}
>
  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24">
        <div class="text-center">
          <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
            Proyectos y Casos de <span class="text-primary">Éxito</span>
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            Experiencia comprobada en automatización industrial, IoT e Industria 4.0. 
            Resultados medibles y seguridad primero en cada proyecto.
          </p>
          <div class="flex flex-wrap justify-center gap-4 text-sm">
            <span class="inline-flex items-center px-3 py-1 rounded-full bg-primary/10 text-primary">
              <Icon name="mdi:factory" class="w-4 h-4 mr-2" />
              {items.length} Proyectos
            </span>
            <span class="inline-flex items-center px-3 py-1 rounded-full bg-green-100 text-green-800">
              <Icon name="mdi:star" class="w-4 h-4 mr-2" />
              {destacados.length} Destacados
            </span>
          </div>
        </div>
      </div>
    </section>

    <!-- Proyectos destacados -->
    {destacados.length > 0 && (
      <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex items-center justify-between mb-8">
            <div>
              <h2 class="text-3xl font-bold text-gray-900">Proyectos Destacados</h2>
              <p class="text-gray-600 mt-2">Nuestros casos de éxito más impactantes</p>
            </div>
            <a 
              href="#listado" 
              class="inline-flex items-center text-primary hover:text-secondary font-medium"
            >
              Ver todos <Icon name="mdi:arrow-right" class="w-4 h-4 ml-2" />
            </a>
          </div>
          
          <div class="flex gap-6 overflow-x-auto snap-x snap-mandatory pb-4">
            {destacados.map((proyecto) => (
              <a 
                href={toUrl(proyecto)} 
                class="snap-center shrink-0 w-[380px] bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group"
              >
                <div class="relative">
                  <img 
                    src={proyecto.data.coverImage} 
                    alt={proyecto.data.title} 
                    class="h-48 w-full object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                  <div class="absolute top-4 left-4">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary text-white">
                      <Icon name="mdi:star" class="w-4 h-4 mr-1" />
                      Destacado
                    </span>
                  </div>
                  <div class="absolute top-4 right-4">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-white/90 text-gray-700">
                      {proyecto.data.sector}
                    </span>
                  </div>
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary transition-colors">
                    {proyecto.data.title}
                  </h3>
                  <p class="text-gray-600 mb-4 line-clamp-2">{proyecto.data.resumen}</p>
                  
                  {proyecto.data.kpis.length > 0 && (
                    <div class="flex gap-4 mb-4 text-sm">
                      {proyecto.data.kpis.slice(0, 2).map((kpi) => (
                        <span class="text-gray-500">
                          <strong class="text-primary">{kpi.value}</strong> {kpi.label}
                        </span>
                      ))}
                    </div>
                  )}
                  
                  <div class="flex flex-wrap gap-2">
                    {proyecto.data.tecnologias.slice(0, 3).map((tech) => (
                      <span class="text-xs bg-gray-100 text-gray-700 rounded-full px-2 py-1">
                        {tech}
                      </span>
                    ))}
                    {proyecto.data.tecnologias.length > 3 && (
                      <span class="text-xs text-gray-500">
                        +{proyecto.data.tecnologias.length - 3} más
                      </span>
                    )}
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Listado completo de proyectos -->
    <section id="listado" class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Todos los Proyectos</h2>
          <p class="text-gray-600">Explora nuestra experiencia completa en automatización industrial</p>
        </div>
        
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {items.map((proyecto) => (
            <a 
              href={toUrl(proyecto)} 
              class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group"
            >
              <div class="relative">
                <img 
                  src={proyecto.data.coverImage} 
                  alt={proyecto.data.title} 
                  class="h-48 w-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
                <div class="absolute top-4 left-4 flex gap-2">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary/90 text-white">
                    <Icon name="mdi:factory" class="w-4 h-4 mr-1" />
                    {proyecto.data.sector}
                  </span>
                  {proyecto.data.destacado && (
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-amber-500 text-white">
                      <Icon name="mdi:star" class="w-4 h-4 mr-1" />
                    </span>
                  )}
                </div>
                {proyecto.data.cliente && (
                  <div class="absolute top-4 right-4">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-white/90 text-gray-700">
                      {proyecto.data.cliente}
                    </span>
                  </div>
                )}
              </div>
              
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary transition-colors">
                  {proyecto.data.title}
                </h3>
                <p class="text-gray-600 mb-4 line-clamp-3">{proyecto.data.resumen}</p>
                
                {proyecto.data.kpis.length > 0 && (
                  <div class="flex gap-4 mb-4 text-sm">
                    {proyecto.data.kpis.slice(0, 2).map((kpi) => (
                      <span class="text-gray-500">
                        <strong class="text-primary">{kpi.value}</strong> {kpi.label}
                      </span>
                    ))}
                  </div>
                )}
                
                <div class="flex items-center justify-between">
                  <div class="flex gap-2 text-xs text-gray-500">
                    {proyecto.data.fecha && (
                      <span class="flex items-center">
                        <Icon name="mdi:calendar" class="w-3 h-3 mr-1" />
                        {proyecto.data.fecha}
                      </span>
                    )}
                    {proyecto.data.ubicacion && (
                      <span class="flex items-center">
                        <Icon name="mdi:map-marker" class="w-3 h-3 mr-1" />
                        {proyecto.data.ubicacion}
                      </span>
                    )}
                  </div>
                  
                  <div class="flex items-center text-primary text-sm font-medium">
                    Ver proyecto <Icon name="mdi:arrow-right" class="w-4 h-4 ml-1" />
                  </div>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Final -->
    <section class="py-16 bg-primary text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-4">¿Listo para tu siguiente proyecto?</h2>
        <p class="text-xl text-primary-light mb-8">
          Contáctanos para discutir cómo podemos ayudarte con tu proyecto de automatización industrial
        </p>
        <a 
          href="/contacto" 
          class="inline-flex items-center px-8 py-4 bg-white text-primary rounded-lg font-semibold hover:bg-gray-100 transition-colors"
        >
          <Icon name="mdi:message" class="w-5 h-5 mr-2" />
          Solicitar Consulta Gratuita
        </a>
      </div>
    </section>
  </main>
</Layout>